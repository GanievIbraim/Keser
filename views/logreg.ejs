<% layout('layout/page.ejs') %>

<div id="reg_table">
    <h1 style="text-align: center;">Регистрация и вход</h1>
    <p style="width: 25%; text-align: center;">Введите имя пользователя и пароль, если такого пользователя нет, то он будет создан.</p>
    <form class="form-horizontal" action="/logreg" method="post" style="width: 25%;">
        
        <div class="form-group" style="margin-bottom: 1.5vh;">
            <label class="control-label col-sm-1">Имя</label>
            <div class="col-sm-5" style="width: 100%;">
                <input class="form-control" type="text"
                   placeholder="Введите имя" name="username"/>
            </div>
        </div>

        <div class="form-group" style="margin-bottom: 1.5vh;">
            <label class="control-label col-sm-1">Пароль</label>
            <div class="col-sm-5" style="width: 100%;">
                <input class="form-control" type="password" 
                 placeholder="Введите пароль" name="password"/>
            </div>
        </div>

        <div class="form-group" style="margin-bottom: 1.5vh;">
            <div class="col-sm-offset-1 col-sm-5" style="width: 100%;">
                <input style="background-color: #212529; border: 0px;"class="btn btn-primary" type="submit" value="Войти"/>
            </div>
        </div>

        <% if(error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
     
    </form>    
</div>
